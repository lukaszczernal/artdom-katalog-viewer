.header
	position fixed
	top 0
	width 100%
	height 70px
	background-color #fff
	opacity 0.95

	&.m-static
		position static
		border-bottom 1px solid lightgray

.header-logo
	position absolute
	width 100%
	line-height 70px

.header-logoImage
	vertical-align middle
	max-width 180px
	min-width 100px
	width 30%
	margin-left 1em

.header-menu
	position absolute
	margin 0 0 0 30%
	padding 0px
	line-height 70px

	&.m-pullRight
		position static
		float right

.header-menuItem
	display inline
	vertical-align middle

.header-menuLink
	padding 1em 1em
	text-decoration none
	font-size 13px
	font-weight bold
	color #333
	text-transform uppercase
	cursor pointer
	opacity 0.4

	&:hover
		color blue

	&:active
		color inherit

	&.active
		opacity 1

		&:hover
			color inherit


@media only screen and (max-width: 1000px) {
	.header-menu {
		display: none;
	}
}